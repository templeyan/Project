<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
 <com.handmark.pulltorefresh.library.PullToRefreshScrollView
     android:id="@+id/PRScrollView"
     android:layout_width="match_parent"
     android:layout_height="match_parent">
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:orientation="vertical">

     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="50dp"
         android:gravity="center"

         >
         <TextView
             android:layout_marginLeft="10dp"
             android:id="@+id/tv"
             android:layout_width="10dp"
             android:layout_height="wrap_content"
             android:background="#008040"/>
         <TextView
            android:layout_toRightOf="@+id/tv"
             android:gravity="center"
             android:text="明星音乐人"
             android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
             android:layout_height="wrap_content" />
         <TextView
             android:id="@+id/musicstar_more"
             android:layout_alignParentRight="true"
             android:gravity="center"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:drawableRight="@drawable/ic_play_arrow_black_24dp"
             android:text="更多"/>

     </RelativeLayout>
         <android.support.v7.widget.RecyclerView
             android:id="@+id/hot_RecylerView1"
             android:layout_width="match_parent"
             android:layout_height="400dp"
             android:layout_gravity="center"></android.support.v7.widget.RecyclerView>
         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="50dp"
             android:gravity="center"

             >
             <TextView
                 android:layout_marginLeft="10dp"
                 android:id="@+id/tv1"
                 android:layout_width="10dp"
                 android:layout_height="wrap_content"
                 android:background="#008040"/>
             <TextView
                 android:layout_toRightOf="@+id/tv1"
                 android:gravity="center"
                 android:text="呐喊榜音乐人"
                 android:layout_marginLeft="10dp"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content" />
             <TextView
                 android:layout_alignParentRight="true"
                 android:gravity="center"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:drawableRight="@drawable/ic_play_arrow_black_24dp"
                 android:text="更多"/>

         </RelativeLayout>
         <android.support.v7.widget.RecyclerView
             android:id="@+id/hot_RecylerView2"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_gravity="center"></android.support.v7.widget.RecyclerView>
         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="50dp"
             android:gravity="center"

             >
             <TextView
                 android:layout_marginLeft="10dp"
                 android:id="@+id/tv2"
                 android:layout_width="10dp"
                 android:layout_height="wrap_content"
                 android:background="#008040"/>
             <TextView
                 android:layout_toRightOf="@+id/tv2"
                 android:gravity="center"
                 android:text="新锐音乐人"
                 android:layout_marginLeft="10dp"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content" />
             <TextView
                 android:layout_alignParentRight="true"
                 android:gravity="center"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:drawableRight="@drawable/ic_play_arrow_black_24dp"
                 android:text="更多"/>

         </RelativeLayout>
         <android.support.v7.widget.RecyclerView
             android:id="@+id/hot_RecylerView3"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_gravity="center"></android.support.v7.widget.RecyclerView>
         <RelativeLayout
             android:layout_width="match_parent"
             android:layout_height="50dp"
             android:gravity="center"

             >
             <TextView
                 android:layout_marginLeft="10dp"
                 android:id="@+id/tv3"
                 android:layout_width="10dp"
                 android:layout_height="wrap_content"
                 android:background="#008040"/>
             <TextView
                 android:layout_toRightOf="@+id/tv3"
                 android:gravity="center"
                 android:text="音乐分类"
                 android:layout_marginLeft="10dp"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content" />
             <TextView
                 android:layout_alignParentRight="true"
                 android:gravity="center"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:drawableRight="@drawable/ic_play_arrow_black_24dp"
                 android:text="更多"/>

         </RelativeLayout>
         <android.support.v7.widget.RecyclerView
             android:id="@+id/hot_RecylerView4"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_gravity="center"></android.support.v7.widget.RecyclerView>

     </LinearLayout>
 </com.handmark.pulltorefresh.library.PullToRefreshScrollView>
</LinearLayout>
