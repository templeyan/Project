<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <com.handmark.pulltorefresh.library.PullToRefreshScrollView
        android:id="@+id/worklist_PRScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/worklist_hotpic"
                    android:layout_width="20dp"
                    android:layout_height="50dp"
                  />
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/worklist_recyclerview1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

            </LinearLayout>
            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/worklist_originpic"
                    android:layout_width="20dp"
                    android:layout_height="50dp"
                   />
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/worklist_recyclerview2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

            </LinearLayout>
            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/worklist_salepic"
                    android:layout_width="20dp"
                    android:layout_height="50dp"
                   />
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/worklist_recyclerview3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

            </LinearLayout>
            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/worklist_coverpic"
                    android:layout_width="20dp"
                    android:layout_height="50dp"
                    />
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/worklist_recyclerview4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

            </LinearLayout>
            <LinearLayout
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/worklist_videopic"
                    android:layout_width="20dp"
                    android:layout_height="50dp"
                    />
                <android.support.v7.widget.RecyclerView
                    android:id="@+id/worklist_recyclerview5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

            </LinearLayout>
        </LinearLayout>

    </com.handmark.pulltorefresh.library.PullToRefreshScrollView>



</LinearLayout>
